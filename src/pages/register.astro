---
import Layout from "../layouts/Layout.astro";
import RegisterComponent from "../components/Register.tsx";

// Get the invite token from the URL query parameters
const url = new URL(Astro.request.url);
const inviteToken = url.searchParams.get('token') || undefined;
---

<Layout title="Register - NFL Pickem">
  <main class="min-h-screen bg-gray-100">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">
        NFL Pickem Registration
      </h1>
      <div class="max-w-md mx-auto">
        <RegisterComponent client:load inviteToken={inviteToken} />
      </div>
    </div>
  </main>
</Layout>