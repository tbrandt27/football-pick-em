# Local Development Environment with LocalStack
# Copy this to .env.local for local development with LocalStack

# Core Environment Configuration
NODE_ENV=development
PORT=3001

# Static Files Configuration
LOGOS_PATH=./public/logos
APP_ROOT=.

# Database Configuration (LocalStack mode)
DATABASE_TYPE=dynamodb

# JWT Configuration
JWT_SECRET=local-development-jwt-secret-key
SETTINGS_ENCRYPTION_KEY=local-development-encryption-key-32

# Admin Configuration
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=admin123

# Email Configuration (disabled for local development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_FROM=nfl-pickem@localhost

# AWS Configuration (LocalStack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
DYNAMODB_TABLE_PREFIX=football_pickem_

# LocalStack Configuration
LOCALSTACK_ENDPOINT=http://localhost:4566
USE_LOCALSTACK=true

# Health Check Configuration
ENABLE_DETAILED_HEALTH=true
EXPOSE_DETAILED_HEALTH=true
HEALTH_CHECK_TOKEN=local-health-token

# ESPN API Configuration
ESPN_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/football/nfl

# Debug Configuration
DEBUG=1
LOG_LEVEL=debug