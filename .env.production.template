# Core Environment Configuration
NODE_ENV=production
PORT=3001

# Static Files Configuration
LOGOS_PATH=/var/app/current/public/logos
APP_ROOT=/var/app/current

# Database Configuration
DATABASE_TYPE=dynamodb
# DATABASE_TYPE=sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=nfl-pickem@example.com

# AWS Configuration (for DynamoDB)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
DYNAMODB_TABLE_PREFIX=football_pickem_

# Health Check Security Controls
# Enable detailed health endpoints in production (default: false)
ENABLE_DETAILED_HEALTH=false

# Expose detailed information in health responses (default: false)
EXPOSE_DETAILED_HEALTH=false

# Token for monitoring systems to access health endpoints
HEALTH_CHECK_TOKEN=your-secure-health-check-token-for-monitoring-systems

# ESPN API Configuration
ESPN_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/football/nfl